{
  "name": "x402-policykit",
  "version": "0.1.0",
  "private": true,
  "description": "Reusable toolkit for x402 paid API endpoints with policy-based spending control",
  "scripts": {
    "dev": "pnpm --filter @x402/dashboard-web dev",
    "dev:worker": "pnpm --filter @x402/paywall-worker dev",
    "dev:all": "concurrently \"pnpm dev:worker\" \"pnpm dev\"",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/*' build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "deploy:worker": "pnpm --filter @x402/paywall-worker deploy",
    "deploy:dashboard": "pnpm --filter @x402/dashboard-web deploy",
    "db:init": "pnpm --filter @x402/paywall-worker db:init",
    "db:init:remote": "pnpm --filter @x402/paywall-worker db:init:remote"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "keywords": [
    "x402",
    "http-402",
    "payment",
    "paywall",
    "cloudflare",
    "workers",
    "policy",
    "spending"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/x402-policykit"
  }
}
