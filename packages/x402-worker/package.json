{
  "name": "@x402/worker",
  "version": "0.1.0",
  "description": "x402 Worker middleware - add paywall to Cloudflare Worker routes",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@x402/policy-engine": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "x402",
    "cloudflare",
    "workers",
    "paywall",
    "middleware"
  ],
  "license": "MIT"
}
